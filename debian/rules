#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1

include /usr/share/dpkg/pkg-info.mk

export PYBUILD_NAME = session-util

%:
	debian/gen-libsession-util-install.sh $(DEB_VERSION_UPSTREAM)
	dh $@ --buildsystem=cmake --parallel

override_dh_auto_configure:
	dh_auto_configure -- -DBUILD_SHARED_LIBS=ON -DWITH_TESTS=OFF

# Ubuntu's default zstd compression for control, data is not well supported outside Ubuntu:
override_dh_builddeb:
	dh_builddeb -- -Zxz
